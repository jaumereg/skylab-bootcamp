.panel.panel-default
  .panel-heading.text-center
    h4 Current Cart
  .panel-body
    table.table.borderless.list-cart
      thead
        tr
          td
            strong Your Cart: # item
          td
          td
          td
          td
      tbody
        each itemCart in cart
          tr
            td
              h5.item-name  #{itemCart.productName}
              .col-md-6
                .media
                  a.thumbnail(href='#')
                    img.media-object(src=itemCart.image, style='width: 72px; height: 72px;')
                  .media-body
              .col-md-2
                span Price: 
                span.product-price #{itemCart.price}
                //- span.total-price Total: #{itemCart.price * itemCart.quantity}€
              .col-md-2
                span Quantity:
                  //- input(value=itemCart.id, name="id", disabled)
                  input.quantity(type="number", style="width:50px", value=itemCart.quantity, min="1", max="99")
                  input(value=itemCart.price, name='price', class='hidden')
                  span.total-price Total: #{itemCart.price * itemCart.quantity}€
              .col-md-2
                a.btn.btn-danger.remove(href=`/cart/${itemCart.id}`) Remove
